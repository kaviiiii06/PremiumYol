@model IEnumerable<TrendyolClone.Models.Urun>
@{
    ViewData["Title"] = "Ürün SEO Yönetimi";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Ürün SEO Yönetimi</h3>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Ürün</th>
                                    <th>Kategori</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var urun in Model)
                                {
                                    <tr>
                                        <td>@urun.Id</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@urun.ResimUrl" alt="@urun.Ad" style="width: 50px; height: 50px; object-fit: cover;" class="me-2">
                                                <span>@urun.Ad</span>
                                            </div>
                                        </td>
                                        <td>@urun.Kategori?.Ad</td>
                                        <td>
                                            @if (urun.Aktif)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("EditProduct", new { id = urun.Id })" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i> SEO Düzenle
                                            </a>
                                            <button class="btn btn-sm btn-success" onclick="generateSeo(@urun.Id)">
                                                <i class="fas fa-magic"></i> Otomatik Oluştur
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    async function generateSeo(urunId) {
        if (!confirm('Bu ürün için SEO otomatik oluşturulsun mu?')) {
            return;
        }

        try {
            const response = await fetch('@Url.Action("GenerateProductSeo")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(urunId)
            });

            const data = await response.json();
            if (data.success) {
                alert(data.message);
                location.reload();
            }
        } catch (error) {
            alert('Hata oluştu: ' + error.message);
        }
    }
</script>
}
