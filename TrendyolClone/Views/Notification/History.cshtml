@model List<TrendyolClone.Models.Bildirim>
@{
    ViewData["Title"] = "Bildirim Geçmişi";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-history"></i> Bildirim Geçmişi
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henüz bildiriminiz bulunmuyor.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Tür</th>
                                        <th>Başlık</th>
                                        <th>Durum</th>
                                        <th>Detay</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bildirim in Model)
                                    {
                                        <tr>
                                            <td>
                                                <small>@bildirim.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (bildirim.Turu == TrendyolClone.Models.BildirimTuru.Email)
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="fas fa-envelope"></i> Email
                                                    </span>
                                                }
                                                else if (bildirim.Turu == TrendyolClone.Models.BildirimTuru.SMS)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-sms"></i> SMS
                                                    </span>
                                                }
                                            </td>
                                            <td>@bildirim.Baslik</td>
                                            <td>
                                                @switch (bildirim.Durum)
                                                {
                                                    case TrendyolClone.Models.BildirimDurumu.Beklemede:
                                                        <span class="badge bg-warning">Beklemede</span>
                                                        break;
                                                    case TrendyolClone.Models.BildirimDurumu.Gonderiliyor:
                                                        <span class="badge bg-info">Gönderiliyor</span>
                                                        break;
                                                    case TrendyolClone.Models.BildirimDurumu.Basarili:
                                                        <span class="badge bg-success">Başarılı</span>
                                                        break;
                                                    case TrendyolClone.Models.BildirimDurumu.Basarisiz:
                                                        <span class="badge bg-danger">Başarısız</span>
                                                        break;
                                                    case TrendyolClone.Models.BildirimDurumu.IptalEdildi:
                                                        <span class="badge bg-secondary">İptal</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#detayModal@(bildirim.Id)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                        </tr>

                                        <!-- Detay Modal -->
                                        <div class="modal fade" id="detayModal@(bildirim.Id)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">@bildirim.Baslik</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <strong>Tarih:</strong> @bildirim.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")
                                                        </div>
                                                        @if (bildirim.GonderimTarihi.HasValue)
                                                        {
                                                            <div class="mb-3">
                                                                <strong>Gönderim:</strong> @bildirim.GonderimTarihi.Value.ToString("dd.MM.yyyy HH:mm")
                                                            </div>
                                                        }
                                                        <div class="mb-3">
                                                            <strong>İçerik:</strong>
                                                            <div class="mt-2">@Html.Raw(bildirim.Icerik)</div>
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(bildirim.HataMesaji))
                                                        {
                                                            <div class="alert alert-danger">
                                                                <strong>Hata:</strong> @bildirim.HataMesaji
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <nav>
                                <ul class="pagination justify-content-center">
                                    @if (ViewBag.Sayfa > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="History" asp-route-sayfa="@(ViewBag.Sayfa - 1)">Önceki</a>
                                        </li>
                                    }
                                    <li class="page-item active">
                                        <span class="page-link">@ViewBag.Sayfa</span>
                                    </li>
                                    @if (Model.Count >= 20)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="History" asp-route-sayfa="@(ViewBag.Sayfa + 1)">Sonraki</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
