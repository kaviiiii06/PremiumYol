@model Dictionary<string, int>
@{
    ViewData["Title"] = "Bildirim İstatistikleri";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Bildirim İstatistikleri
                    </h4>
                    <small>@ViewBag.Baslangic.ToString("dd.MM.yyyy") - @ViewBag.Bitis.ToString("dd.MM.yyyy")</small>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h2>@Model["Toplam"]</h2>
                                    <p class="mb-0">Toplam Bildirim</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 mb-4">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h2>@Model["Basarili"]</h2>
                                    <p class="mb-0">Başarılı</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 mb-4">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h2>@Model["Basarisiz"]</h2>
                                    <p class="mb-0">Başarısız</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 mb-4">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <h2>@Model["Beklemede"]</h2>
                                    <p class="mb-0">Beklemede</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Durum Dağılımı</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td>Beklemede</td>
                                                <td class="text-end">
                                                    <span class="badge bg-warning">@Model["Beklemede"]</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Gönderiliyor</td>
                                                <td class="text-end">
                                                    <span class="badge bg-info">@Model["Gonderiliyor"]</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Başarılı</td>
                                                <td class="text-end">
                                                    <span class="badge bg-success">@Model["Basarili"]</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Başarısız</td>
                                                <td class="text-end">
                                                    <span class="badge bg-danger">@Model["Basarisiz"]</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>İptal Edildi</td>
                                                <td class="text-end">
                                                    <span class="badge bg-secondary">@Model["IptalEdildi"]</span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Tür Dağılımı</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <i class="fas fa-envelope text-info"></i> Email
                                                </td>
                                                <td class="text-end">
                                                    <span class="badge bg-info">@Model["Email"]</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <i class="fas fa-sms text-success"></i> SMS
                                                </td>
                                                <td class="text-end">
                                                    <span class="badge bg-success">@Model["SMS"]</span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                    @{
                                        var basariOrani = Model["Toplam"] > 0 
                                            ? (Model["Basarili"] * 100.0 / Model["Toplam"]).ToString("F1") 
                                            : "0";
                                    }

                                    <div class="mt-4">
                                        <h6>Başarı Oranı</h6>
                                        <div class="progress" style="height: 30px;">
                                            <div class="progress-bar bg-success" 
                                                 role="progressbar" 
                                                 style="width: @basariOrani%">
                                                %@basariOrani
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
