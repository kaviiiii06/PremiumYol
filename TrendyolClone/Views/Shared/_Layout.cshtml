<!DOCTYPE html>
<html lang="tr" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PremiumYol</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico?v=2">
    
    <!-- Tema yükleme - FLASH önleme için CSS'den önce -->
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
        })();
    </script>
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Font Awesome 6 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Modern Theme CSS -->
    <link rel="stylesheet" href="~/css/modern-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrendyolClone.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                @{
                    var siteSettings = ViewBag.SiteSettings as TrendyolClone.Models.SiteAyarlari;
                }
                
                <!-- Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    @if (siteSettings != null && !string.IsNullOrEmpty(siteSettings.LogoUrl))
                    {
                        <img src="@siteSettings.LogoUrl" alt="@siteSettings.SiteAdi" style="height: 32px;" class="me-2">
                    }
                    else
                    {
                        <i class="fas fa-crown"></i>
                    }
                    <span>@(siteSettings?.SiteAdi ?? "PremiumYol")</span>
                </a>
                
                <!-- Search Bar -->
                <div class="search-container d-none d-lg-block">
                    <form class="search-form" asp-controller="Search" asp-action="Index" method="get">
                        <div class="search-wrapper">
                            <i class="fas fa-search search-icon"></i>
                            <input class="search-input" 
                                   id="searchInput"
                                   type="search" 
                                   name="q" 
                                   placeholder="Ürün, kategori veya marka ara..." 
                                   aria-label="Search"
                                   autocomplete="off">
                            <button class="search-button" type="submit" title="Ara">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </form>
                    <div id="searchAutocomplete" class="search-autocomplete" style="display: none;"></div>
                </div>

                <!-- Right Side Actions -->
                <div class="d-flex align-items-center gap-2">
                    <!-- Theme Toggle -->
                    <button class="btn" id="theme-toggle" title="Tema Değiştir">
                        <i class="fas fa-moon" id="theme-icon"></i>
                    </button>
                    
                    <!-- Products Link -->
                    <a class="nav-link d-none d-md-flex align-items-center gap-1" asp-controller="Urun" asp-action="Index">
                        <i class="fas fa-th-large"></i>
                        <span>Ürünler</span>
                    </a>
                    
                    <!-- Cart -->
                    <a class="nav-link position-relative d-flex align-items-center gap-1" asp-controller="Cart" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="d-none d-md-inline">Sepet</span>
                        <span class="badge rounded-pill bg-danger" id="cart-count">0</span>
                    </a>
                    
                    @if (Context.Session.GetString("AdminId") != null)
                    {
                        <!-- Admin Dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-warning btn-sm dropdown-toggle d-flex align-items-center gap-2" 
                                    type="button" id="adminDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-crown"></i>
                                <span class="d-none d-md-inline">@Context.Session.GetString("AdminKullaniciAdi")</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt text-primary"></i>Dashboard
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Products">
                                        <i class="fas fa-box text-info"></i>Ürün Yönetimi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Categories">
                                        <i class="fas fa-tags text-success"></i>Kategori Yönetimi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                        <i class="fas fa-users text-secondary"></i>Kullanıcı Yönetimi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="SiteSettings">
                                        <i class="fas fa-cog text-warning"></i>Site Ayarları
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                                        <i class="fas fa-home text-muted"></i>Ana Sayfa
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Admin" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt"></i>Çıkış
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else if (Context.Session.GetString("UserId") != null)
                    {
                        <!-- User Dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-outline-primary btn-sm dropdown-toggle d-flex align-items-center gap-2" 
                                    type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                @if (!string.IsNullOrEmpty(Context.Session.GetString("UserPhoto")))
                                {
                                    <img src="@Context.Session.GetString("UserPhoto")" alt="Profil" 
                                         class="rounded-circle" style="width: 28px; height: 28px; object-fit: cover;">
                                }
                                else
                                {
                                    <i class="fas fa-user-circle" style="font-size: 1.25rem;"></i>
                                }
                                <span class="d-none d-md-inline">@Context.Session.GetString("Username")</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="fas fa-user text-primary"></i>Profilim
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Orders">
                                        <i class="fas fa-box text-info"></i>Siparişlerim
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Favorites">
                                        <i class="fas fa-heart text-danger"></i>Favorilerim
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Addresses">
                                        <i class="fas fa-map-marker-alt text-success"></i>Adreslerim
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt"></i>Çıkış Yap
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- Login Button -->
                        <a class="btn btn-primary btn-sm d-flex align-items-center gap-2" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-user"></i>
                            <span class="d-none d-md-inline">Giriş Yap</span>
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer-modern">
        <div class="container">
            <div class="row align-items-center py-3">
                <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                    <span class="footer-text">
                        &copy; 2025 <span class="gradient-text fw-bold">@(siteSettings?.SiteAdi ?? "PremiumYol")</span> 
                        - @(siteSettings?.AltBilgiMetni ?? "Tüm hakları saklıdır.")
                    </span>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="d-flex align-items-center justify-content-center justify-content-md-end gap-3 flex-wrap">
                        <span class="footer-text">
                            <i class="fas fa-code me-1"></i>Baran Akbulut
                        </span>
                        <a href="tel:@(siteSettings?.IletisimTelefon ?? "05389693606")" class="footer-link">
                            <i class="fas fa-phone me-1"></i>@(siteSettings?.IletisimTelefon ?? "0538 969 36 06")
                        </a>
                        <a href="mailto:@(siteSettings?.IletisimEmail ?? "baran@onewearr.shop")" class="footer-link">
                            <i class="fas fa-envelope me-1"></i>E-posta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Navbar scroll effect and Bootstrap initialization
        document.addEventListener('DOMContentLoaded', function() {
            // Navbar scroll effect
            window.addEventListener('scroll', function() {
                const navbar = document.querySelector('.navbar');
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
            
            // Initialize dropdowns
            var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
            dropdownElementList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl);
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
