@model List<TrendyolClone.Models.DTOs.SaticiUrunDto>
@{
    ViewData["Title"] = "Ürünlerim";
    var durum = ViewBag.Durum as TrendyolClone.Models.SaticiUrunDurum?;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Ürünlerim</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("CreateProduct")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
            </a>
        </div>
    </div>

    <!-- Filtreler -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Products")" class="btn @(durum == null ? "btn-primary" : "btn-outline-primary")">
                    Tümü (@Model.Count)
                </a>
                <a href="@Url.Action("Products", new { durum = 0 })" class="btn @(durum == TrendyolClone.Models.SaticiUrunDurum.Taslak ? "btn-primary" : "btn-outline-primary")">
                    Taslak
                </a>
                <a href="@Url.Action("Products", new { durum = 1 })" class="btn @(durum == TrendyolClone.Models.SaticiUrunDurum.OnayBekliyor ? "btn-primary" : "btn-outline-primary")">
                    Onay Bekliyor
                </a>
                <a href="@Url.Action("Products", new { durum = 2 })" class="btn @(durum == TrendyolClone.Models.SaticiUrunDurum.Yayinda ? "btn-primary" : "btn-outline-primary")">
                    Yayında
                </a>
                <a href="@Url.Action("Products", new { durum = 4 })" class="btn @(durum == TrendyolClone.Models.SaticiUrunDurum.StokTukendi ? "btn-primary" : "btn-outline-primary")">
                    Stok Tükendi
                </a>
            </div>
        </div>
    </div>

    <!-- Ürün Listesi -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Stok</th>
                                <th>Fiyat</th>
                                <th>Görüntülenme</th>
                                <th>Satış</th>
                                <th>Durum</th>
                                <th>Eklenme</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var urun in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@(urun.Resim ?? "/images/no-image.png")" alt="@urun.UrunAdi" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                            <div>
                                                <h6 class="mb-0">@urun.UrunAdi</h6>
                                                <small class="text-muted">ID: @urun.UrunId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (urun.Stok == 0)
                                        {
                                            <span class="badge bg-danger">Tükendi</span>
                                        }
                                        else if (urun.Stok <= 10)
                                        {
                                            <span class="badge bg-warning">@urun.Stok</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@urun.Stok</span>
                                        }
                                    </td>
                                    <td>
                                        @if (urun.IndirimliFiyat.HasValue)
                                        {
                                            <div>
                                                <del class="text-muted">@urun.Fiyat.ToString("C")</del><br>
                                                <strong class="text-danger">@urun.IndirimliFiyat.Value.ToString("C")</strong>
                                            </div>
                                        }
                                        else
                                        {
                                            <strong>@urun.Fiyat.ToString("C")</strong>
                                        }
                                    </td>
                                    <td>@urun.GoruntulemeSayisi</td>
                                    <td><strong>@urun.SatisSayisi</strong></td>
                                    <td>
                                        @switch (urun.Durum)
                                        {
                                            case TrendyolClone.Models.SaticiUrunDurum.Taslak:
                                                <span class="badge bg-secondary">Taslak</span>
                                                break;
                                            case TrendyolClone.Models.SaticiUrunDurum.OnayBekliyor:
                                                <span class="badge bg-warning">Onay Bekliyor</span>
                                                break;
                                            case TrendyolClone.Models.SaticiUrunDurum.Yayinda:
                                                <span class="badge bg-success">Yayında</span>
                                                break;
                                            case TrendyolClone.Models.SaticiUrunDurum.Reddedildi:
                                                <span class="badge bg-danger">Reddedildi</span>
                                                break;
                                            case TrendyolClone.Models.SaticiUrunDurum.StokTukendi:
                                                <span class="badge bg-dark">Stok Tükendi</span>
                                                break;
                                            case TrendyolClone.Models.SaticiUrunDurum.Pasif:
                                                <span class="badge bg-secondary">Pasif</span>
                                                break;
                                        }
                                    </td>
                                    <td>@urun.EklenmeTarihi.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditProduct", new { id = urun.Id })" class="btn btn-outline-primary" title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (urun.Durum == TrendyolClone.Models.SaticiUrunDurum.Taslak)
                                            {
                                                <form method="post" action="@Url.Action("SubmitForApproval", new { id = urun.Id })" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-success" title="Onaya Gönder">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            <form method="post" action="@Url.Action("DeleteProduct", new { id = urun.Id })" class="d-inline" onsubmit="return confirm('Ürünü silmek istediğinizden emin misiniz?')">
                                                <button type="submit" class="btn btn-outline-danger" title="Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-box-seam" style="font-size: 4rem; color: #ccc;"></i>
                    <h4 class="mt-3">Henüz ürün eklemediniz</h4>
                    <p class="text-muted">İlk ürününüzü ekleyerek satışa başlayın</p>
                    <a href="@Url.Action("CreateProduct")" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Ürün Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>
