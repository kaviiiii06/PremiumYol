@model TrendyolClone.Models.Kullanici
@{
    ViewData["Title"] = "Hesabı Sil";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Hesabı Sil
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5><i class="fas fa-exclamation-circle me-2"></i>Dikkat!</h5>
                        <p class="mb-0">Bu işlem geri alınamaz. Hesabınızı sildiğinizde:</p>
                    </div>

                    <ul class="list-unstyled mb-4">
                        <li class="mb-2">
                            <i class="fas fa-times text-danger me-2"></i>
                            Tüm kişisel bilgileriniz silinecek
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-times text-danger me-2"></i>
                            Favori ürünleriniz silinecek
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-times text-danger me-2"></i>
                            Adresleriniz silinecek
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-times text-danger me-2"></i>
                            Yorumlarınız silinecek
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Sipariş geçmişiniz anonim olarak saklanacak
                        </li>
                    </ul>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title">Hesap Bilgileri</h6>
                            <p class="mb-1"><strong>Ad Soyad:</strong> @Model.Ad @Model.Soyad</p>
                            <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
                            <p class="mb-1"><strong>Kullanıcı Adı:</strong> @Model.KullaniciAdi</p>
                            <p class="mb-0"><strong>Rol:</strong> @Model.Rol?.Ad</p>
                        </div>
                    </div>

                    <form id="deleteAccountForm">
                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Şifrenizi Girin
                            </label>
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   name="password" 
                                   placeholder="Şifrenizi girin" 
                                   required>
                            <small class="text-muted">Güvenlik için şifrenizi doğrulamamız gerekiyor.</small>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" 
                                   type="checkbox" 
                                   id="confirmDelete" 
                                   required>
                            <label class="form-check-label" for="confirmDelete">
                                Hesabımı kalıcı olarak silmek istediğimi onaylıyorum
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash-alt me-2"></i>Hesabı Kalıcı Olarak Sil
                            </button>
                            <a asp-action="Settings" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Vazgeç
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#deleteAccountForm').submit(function(e) {
            e.preventDefault();
            
            if (!$('#confirmDelete').is(':checked')) {
                alert('Lütfen onay kutusunu işaretleyin!');
                return;
            }

            if (!confirm('Hesabınızı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')) {
                return;
            }

            var password = $('#password').val();
            var button = $(this).find('button[type="submit"]');
            button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Siliniyor...');

            $.post('@Url.Action("ConfirmDeleteAccount", "Account")', { password: password }, function(data) {
                if (data.success) {
                    // Başarı mesajı göster
                    $('body').html(
                        '<div class="container mt-5">' +
                        '<div class="row justify-content-center">' +
                        '<div class="col-md-6 text-center">' +
                        '<div class="card border-success">' +
                        '<div class="card-body">' +
                        '<i class="fas fa-check-circle fa-4x text-success mb-3"></i>' +
                        '<h3>Hesabınız Silindi</h3>' +
                        '<p class="text-muted">Hesabınız başarıyla silindi. Bizi tercih ettiğiniz için teşekkür ederiz.</p>' +
                        '<a href="/" class="btn btn-primary">Ana Sayfaya Dön</a>' +
                        '</div>' +
                        '</div>' +
                        '</div>' +
                        '</div>' +
                        '</div>'
                    );
                    
                    // 3 saniye sonra ana sayfaya yönlendir
                    setTimeout(function() {
                        window.location.href = '/';
                    }, 3000);
                } else {
                    alert(data.message);
                    button.prop('disabled', false).html('<i class="fas fa-trash-alt me-2"></i>Hesabı Kalıcı Olarak Sil');
                }
            }).fail(function() {
                alert('Bir hata oluştu. Lütfen tekrar deneyin.');
                button.prop('disabled', false).html('<i class="fas fa-trash-alt me-2"></i>Hesabı Kalıcı Olarak Sil');
            });
        });
    </script>
}
