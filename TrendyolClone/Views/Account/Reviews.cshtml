@{
    ViewData["Title"] = "Yorumlarım";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3><i class="fas fa-comment me-2"></i>Yorumlarım</h3>
                <a asp-action="Profile" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Hesabıma Dön
                </a>
            </div>

            <!-- Örnek Yorum -->
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=200&h=200&fit=crop" 
                                 class="img-fluid rounded" alt="Ürün">
                        </div>
                        <div class="col-md-10">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="mb-1">Nike Air Max 270</h5>
                                    <div class="mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        <span class="text-muted ms-2">5.0</span>
                                    </div>
                                </div>
                                <small class="text-muted">15 Ocak 2025</small>
                            </div>
                            <p class="mb-2">
                                Harika bir ürün! Çok rahat ve şık. Günlük kullanım için mükemmel. 
                                Kalitesi çok iyi, kesinlikle tavsiye ederim. Kargo da çok hızlıydı.
                            </p>
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </button>
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash me-1"></i>Sil
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Boş Durum -->
            <div class="card text-center py-5" style="display: none;">
                <div class="card-body">
                    <i class="fas fa-comment-slash fa-4x text-muted mb-3"></i>
                    <h4>Henüz yorum yapmadınız</h4>
                    <p class="text-muted">Satın aldığınız ürünler için yorum yapabilir ve deneyimlerinizi paylaşabilirsiniz.</p>
                    <a asp-action="Orders" class="btn btn-primary">
                        <i class="fas fa-box me-2"></i>Siparişlerime Git
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
