@model List<TrendyolClone.Models.UrunSoru>
@{
    ViewData["Title"] = "Soru Yönetimi";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-question-circle me-2"></i>Soru Yönetimi</h2>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Dashboard'a Dön
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Tüm Sorular (@Model.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Soru</th>
                                <th>Kullanıcı</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var soru in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Urun" asp-action="Details" asp-route-id="@soru.UrunId" target="_blank">
                                            @soru.Urun.Ad
                                        </a>
                                    </td>
                                    <td>@soru.Soru</td>
                                    <td>@soru.Kullanici.Ad @soru.Kullanici.Soyad</td>
                                    <td>@soru.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (soru.Cevaplandi)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Cevaplanmış (@soru.Cevaplar.Count)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock me-1"></i>Beklemede
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-primary answer-btn" data-question-id="@soru.Id">
                                            <i class="fas fa-reply me-1"></i>Cevapla
                                        </button>
                                        <button class="btn btn-sm btn-danger delete-question-btn" data-question-id="@soru.Id">
                                            <i class="fas fa-trash me-1"></i>Sil
                                        </button>
                                    </td>
                                </tr>
                                <tr class="answer-form-row" id="answer-row-@soru.Id" style="display: none;">
                                    <td colspan="6">
                                        <div class="card">
                                            <div class="card-body">
                                                <h6>Cevap Yaz:</h6>
                                                <textarea class="form-control mb-2" id="answer-text-@soru.Id" rows="3" placeholder="Cevabınızı buraya yazın..."></textarea>
                                                <button class="btn btn-success btn-sm submit-answer-btn" data-question-id="@soru.Id">
                                                    <i class="fas fa-paper-plane me-1"></i>Gönder
                                                </button>
                                                <button class="btn btn-secondary btn-sm cancel-answer-btn" data-question-id="@soru.Id">
                                                    İptal
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Henüz soru sorulmamış.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Cevapla butonuna tıklandığında
            $('.answer-btn').click(function() {
                var qId = $(this).data('question-id');
                $('#answer-row-' + qId).slideToggle();
            });

            // İptal butonuna tıklandığında
            $('.cancel-answer-btn').click(function() {
                var qId = $(this).data('question-id');
                $('#answer-row-' + qId).slideUp();
            });

            // Cevap gönder
            $('.submit-answer-btn').click(function() {
                var qId = $(this).data('question-id');
                var answer = $('#answer-text-' + qId).val().trim();

                if (!answer) {
                    alert('Lütfen bir cevap yazın!');
                    return;
                }

                $(this).prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Gönderiliyor...');

                $.post('@Url.Action("AnswerQuestionAdmin", "Admin")', {
                    questionId: qId,
                    answer: answer
                }, function(data) {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                });
            });

            // Soru sil
            $('.delete-question-btn').click(function() {
                if (!confirm('Bu soruyu silmek istediğinize emin misiniz?')) {
                    return;
                }

                var qId = $(this).data('question-id');

                $.post('@Url.Action("DeleteQuestion", "Admin")', {
                    id: qId
                }, function(data) {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                });
            });
        });
    </script>
}
