@model List<TrendyolClone.Models.Tedarikci>
@{
    ViewData["Title"] = "Tedarikçi Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-truck me-2"></i>Tedarikçi Yönetimi</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSupplierModal">
        <i class="fas fa-plus me-2"></i>Yeni Tedarikçi
    </button>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" Rol="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Tedarikçi İstatistikleri -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-truck fa-2x text-primary mb-2"></i>
                <h3>@Model.Count</h3>
                <p class="text-muted mb-0">Toplam Tedarikçi</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                <h3>@Model.Count(s => s.Aktif)</h3>
                <p class="text-muted mb-0">Aktif Tedarikçi</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-box fa-2x text-info mb-2"></i>
                <h3>@Model.Sum(s => s.Urunler.Count)</h3>
                <p class="text-muted mb-0">Toplam Ürün</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-percentage fa-2x text-warning mb-2"></i>
                <h3>@(Model.Any() ? Model.Average(s => s.KomisyonOrani).ToString("F1") : "0")%</h3>
                <p class="text-muted mb-0">Ortalama Komisyon</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tedarikçi</th>
                        <th>Tür</th>
                        <th>Ürün Sayısı</th>
                        <th>Komisyon</th>
                        <th>Teslimat</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Tedarikci in Model)
                    {
                        <tr>
                            <td>@Tedarikci.Id</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @{
                                        var supplierIcon = Tedarikci.Tip switch
                                        {
                                            "AliExpress" => "fab fa-amazon text-warning",
                                            "CJ Dropshipping" => "fas fa-shipping-fast text-primary",
                                            "DHgate" => "fas fa-store text-success",
                                            "Oberlo" => "fab fa-shopify text-info",
                                            _ => "fas fa-truck text-secondary"
                                        };
                                    }
                                    <i class="@supplierIcon fa-2x me-3"></i>
                                    <div>
                                        <h6 class="mb-0">@Tedarikci.Ad</h6>
                                        <small class="text-muted">@Tedarikci.Aciklama</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">@Tedarikci.Tip</span>
                            </td>
                            <td>
                                <span class="badge bg-primary">@Tedarikci.Urunler.Count</span>
                            </td>
                            <td>%@Tedarikci.KomisyonOrani</td>
                            <td>@Tedarikci.TeslimatGunu gün</td>
                            <td>
                                @if (Tedarikci.Aktif)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-success me-1" onclick="showImportModal(@Tedarikci.Id, '@Tedarikci.Ad')" title="Ürün Çek">
                                    <i class="fas fa-download"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-primary me-1" onclick="editSupplier(@Tedarikci.Id)" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteSupplier(@Tedarikci.Id)" title="Sil">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Tedarikçi Ekleme Modal -->
<div class="modal fade" id="addSupplierModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Tedarikçi Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addSupplierForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tedarikçi Adı *</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tür *</label>
                            <select class="form-select" name="type" required>
                                <option value="">Seçiniz</option>
                                <option value="AliExpress">AliExpress</option>
                                <option value="CJ Dropshipping">CJ Dropshipping</option>
                                <option value="DHgate">DHgate</option>
                                <option value="Oberlo">Oberlo</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea class="form-control" name="description" rows="2"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">API URL</label>
                            <input type="url" class="form-control" name="apiUrl">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">API Key</label>
                            <input type="text" class="form-control" name="apiKey">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Komisyon Oranı (%)</label>
                            <input type="number" class="form-control" name="commissionRate" step="0.1" min="0" max="100">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Teslimat Süresi (Gün)</label>
                            <input type="number" class="form-control" name="deliveryDays" min="1">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">İletişim E-posta</label>
                            <input type="email" class="form-control" name="IletisimEmail">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Ürün İçe Aktarma Modal -->
<div class="modal fade" id="importModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ürün İçe Aktar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="selectedTedarikciId">
                <p><strong>Tedarikçi:</strong> <span id="selectedSupplierName"></span></p>
                
                <div class="mb-3">
                    <label class="form-label">Arama Terimi</label>
                    <input type="text" class="form-control" id="searchTerm" placeholder="Örn: telefon, laptop, giyim">
                    <small class="text-muted">Çekmek istediğiniz ürün kategorisini yazın</small>
                </div>
                
                <div class="d-grid">
                    <button class="btn btn-success" onclick="importProducts()">
                        <i class="fas fa-download me-2"></i>Ürünleri Çek
                    </button>
                </div>
                
                <div id="importResults" class="mt-3" style="display: none;">
                    <h6>Bulunan Ürünler:</h6>
                    <div id="productList"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tedarikçi ekleme
        $('#addSupplierForm').submit(function(e) {
            e.preventDefault();
            
            $.post('@Url.Action("AddSupplier", "Admin")', $(this).serialize(), function(data) {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Hata: ' + data.message);
                }
            });
        });

        // Tedarikçi silme
        function deleteSupplier(id) {
            if (confirm('Bu tedarikçiyi silmek istediğinizden emin misiniz?')) {
                $.post('@Url.Action("DeleteSupplier", "Admin")', { id: id }, function(data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Hata: ' + data.message);
                    }
                });
            }
        }

        // Ürün içe aktarma modalını göster
        function showImportModal(TedarikciId, supplierName) {
            $('#selectedTedarikciId').val(TedarikciId);
            $('#selectedSupplierName').text(supplierName);
            $('#importResults').hide();
            $('#importModal').modal('show');
        }

        // Ürünleri çek
        function importProducts() {
            var TedarikciId = $('#selectedTedarikciId').val();
            var searchTerm = $('#searchTerm').val();
            
            if (!searchTerm) {
                alert('Lütfen arama terimi girin!');
                return;
            }
            
            // Loading göster
            $('#importResults').show();
            $('#productList').html('<div class="text-center"><i class="fas fa-spinner fa-spin fa-2x"></i><br>Ürünler çekiliyor...</div>');
            
            $.post('@Url.Action("ImportProducts", "Admin")', {
                TedarikciId: TedarikciId,
                searchTerm: searchTerm,
                page: 1
            }, function(data) {
                if (data.success) {
                    var productHtml = '';
                    data.Urunler.forEach(function(Urun) {
                        var priceHtml = Urun.IndirimliFiyat ? 
                            `<span class="text-decoration-line-through text-muted small">${Urun.Fiyat} ₺</span><br><span class="fw-bold text-danger">${Urun.IndirimliFiyat} ₺</span>` :
                            `<span class="fw-bold">${Urun.Fiyat} ₺</span>`;
                            
                        productHtml += `
                            <div class="border rounded p-3 mb-3 Urun-item">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <img src="${Urun.imageUrl}" class="img-fluid rounded" style="height: 80px; width: 80px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/80x80?text=No+Image'">
                                    </div>
                                    <div class="col-md-5">
                                        <h6 class="mb-1">${Urun.Ad}</h6>
                                        <small class="text-muted">ID: ${Urun.supplierUrunId}</small><br>
                                        <small class="text-info">Stok: ${Urun.Stok} | Rating: ${Urun.Puan} (${Urun.YorumSayisi} yorum)</small>
                                    </div>
                                    <div class="col-md-3">
                                        ${priceHtml}
                                    </div>
                                    <div class="col-md-2">
                                        <button class="btn btn-sm btn-success w-100" onclick="saveProduct('${TedarikciId}', '${Urun.supplierUrunId}', '${searchTerm}')">
                                            <i class="fas fa-download me-1"></i>İçe Aktar
                                        </button>
                                        <a href="${Urun.supplierUrl}" target="_blank" class="btn btn-sm btn-outline-info w-100 mt-1">
                                            <i class="fas fa-external-link-alt me-1"></i>Kaynak
                                        </a>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    $('#productList').html(productHtml);
                } else {
                    $('#productList').html(`<div class="alert alert-danger">${data.message}</div>`);
                }
            }).fail(function() {
                $('#productList').html('<div class="alert alert-danger">API bağlantı hatası!</div>');
            });
        }

        // Ürünü kaydet
        function saveProduct(TedarikciId, supplierUrunId, searchTerm) {
            $.post('@Url.Action("SaveImportedProduct", "Admin")', {
                TedarikciId: TedarikciId,
                supplierUrunId: supplierUrunId,
                searchTerm: searchTerm
            }, function(data) {
                if (data.success) {
                    alert('Ürün başarıyla kaydedildi!');
                    // Butonu devre dışı bırak
                    $(`button[onclick*="${supplierUrunId}"]`).prop('disabled', true).html('<i class="fas fa-check"></i> Kaydedildi');
                } else {
                    alert('Hata: ' + data.message);
                }
            });
        }
    </script>
}