@model TrendyolClone.Models.Kullanici
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-edit me-2"></i>Kullanıcı Düzenle</h2>
    <a asp-action="Users" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Geri Dön
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" Rol="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" Rol="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-user me-2"></i>Kullanıcı Bilgileri</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="EditUser">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="OlusturmaTarihi" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user me-1 text-primary"></i>Ad
                            </label>
                            <input type="text" class="form-control" asp-for="Ad" required>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user me-1 text-primary"></i>Soyad
                            </label>
                            <input type="text" class="form-control" asp-for="Soyad" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-envelope me-1 text-primary"></i>E-posta
                        </label>
                        <input type="email" class="form-control bg-light" asp-for="Email" readonly>
                        <small class="text-muted">E-posta adresi değiştirilemez</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-phone me-1 text-primary"></i>Telefon
                        </label>
                        <input type="tel" class="form-control" asp-for="TelefonNumarasi" placeholder="0555 555 55 55">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user-tag me-1 text-primary"></i>Rol
                            </label>
                            <select class="form-select" asp-for="RolId">
                                <option value="">Rol Seçin</option>
                                @if (ViewBag.Roles != null)
                                {
                                    @foreach (var Rol in (List<TrendyolClone.Models.Rol>)ViewBag.Roles)
                                    {
                                        <option value="@Rol.Id" selected="@(Rol.Id == Model.RolId)">@Rol.Ad - @Rol.Aciklama</option>
                                    }
                                }
                            </select>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-toggle-on me-1 text-primary"></i>Durum
                            </label>
                            <select class="form-select" asp-for="Aktif">
                                <option value="true" selected="@Model.Aktif">Aktif</option>
                                <option value="false" selected="@(!Model.Aktif)">Pasif</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-calendar me-1 text-primary"></i>Üyelik Tarihi
                        </label>
                        <input type="text" class="form-control bg-light" value="@Model.OlusturmaTarihi.ToString("dd MMMM yyyy HH:mm")" readonly>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                        </button>
                        <a asp-action="Users" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Kullanıcı İstatistikleri</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-12 mb-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-box fa-2x text-primary mb-2"></i>
                            <h4>0</h4>
                            <small class="text-muted">Toplam Sipariş</small>
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                            <h4>0</h4>
                            <small class="text-muted">Favori Ürün</small>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="border rounded p-3">
                            <i class="fas fa-comment fa-2x text-warning mb-2"></i>
                            <h4>0</h4>
                            <small class="text-muted">Yorum</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Güvenlik</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <small>Şifre değiştirme işlemi kullanıcı tarafından yapılmalıdır.</small>
                </div>
                <div class="d-grid">
                    <button class="btn btn-outline-warning btn-sm" onclick="resetPassword(@Model.Id)">
                        <i class="fas fa-key me-2"></i>Şifre Sıfırla
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function resetPassword(KullaniciId) {
            if (confirm('Bu kullanıcının şifresini sıfırlamak istediğinizden emin misiniz?')) {
                // Şifre sıfırlama işlemi burada yapılabilir
                alert('Şifre sıfırlama özelliği henüz aktif değil.');
            }
        }
    </script>
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .btn-primary {
        background: linear-gradient(45deg, #667eea, #764ba2);
        border: none;
    }
    
    .btn-primary:hover {
        background: linear-gradient(45deg, #764ba2, #667eea);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
</style>