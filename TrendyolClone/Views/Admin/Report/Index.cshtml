@model TrendyolClone.Models.DTOs.GenelRaporOzetiDto
@{
    ViewData["Title"] = "Raporlar";
    var filtre = ViewBag.Filtre as TrendyolClone.Models.DTOs.RaporFiltre;
    var satisRaporu = ViewBag.SatisRaporu as List<TrendyolClone.Models.DTOs.SatisRaporuDto>;
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-chart-bar"></i> Raporlar</h2>
        <div class="btn-group">
            <a asp-action="Sales" class="btn btn-outline-primary">Satış Raporu</a>
            <a asp-action="Products" class="btn btn-outline-primary">Ürün Raporu</a>
            <a asp-action="Categories" class="btn btn-outline-primary">Kategori Raporu</a>
            <a asp-action="Financial" class="btn btn-outline-primary">Finansal Rapor</a>
        </div>
    </div>

    <!-- Tarih Filtresi -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Başlangıç Tarihi</label>
                    <input type="date" name="baslangic" class="form-control" value="@filtre?.BaslangicTarihi.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Bitiş Tarihi</label>
                    <input type="date" name="bitis" class="form-control" value="@filtre?.BitisTarihi.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Filtrele
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Özet Kartları -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <h6 class="card-title">Toplam Satış</h6>
                    <h3>₺@Model.ToplamSatis.ToString("N2")</h3>
                    <small>
                        @if (Model.SatisArtisi >= 0)
                        {
                            <i class="fas fa-arrow-up"></i> <text>%@Model.SatisArtisi.ToString("N1")</text>
                        }
                        else
                        {
                            <i class="fas fa-arrow-down"></i> <text>%@Math.Abs(Model.SatisArtisi).ToString("N1")</text>
                        }
                        önceki döneme göre
                    </small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <h6 class="card-title">Toplam Sipariş</h6>
                    <h3>@Model.ToplamSiparis</h3>
                    <small>
                        @if (Model.SiparisArtisi >= 0)
                        {
                            <i class="fas fa-arrow-up"></i> <text>%@Model.SiparisArtisi.ToString("N1")</text>
                        }
                        else
                        {
                            <i class="fas fa-arrow-down"></i> <text>%@Math.Abs(Model.SiparisArtisi).ToString("N1")</text>
                        }
                        önceki döneme göre
                    </small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <h6 class="card-title">Ortalama Sepet</h6>
                    <h3>₺@Model.OrtalamaSeperTutari.ToString("N2")</h3>
                    <small>@Model.ToplamUrunSatisi ürün satıldı</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <h6 class="card-title">Net Kar</h6>
                    <h3>₺@Model.NetKar.ToString("N2")</h3>
                    <small>İade: ₺@Model.IadeTutari.ToString("N2")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Satış Grafiği -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-chart-line"></i> Satış Grafiği</h5>
        </div>
        <div class="card-body">
            <canvas id="salesChart" height="80"></canvas>
        </div>
    </div>

    <!-- Hızlı İstatistikler -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-users"></i> Kullanıcı İstatistikleri</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Yeni Kullanıcı</span>
                        <strong>@Model.YeniKullanici</strong>
                    </div>
                    <a asp-action="Users" class="btn btn-outline-primary btn-sm">Detaylı Rapor</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-undo"></i> İade İstatistikleri</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Toplam İade Tutarı</span>
                        <strong>₺@Model.IadeTutari.ToString("N2")</strong>
                    </div>
                    <a asp-action="Financial" class="btn btn-outline-primary btn-sm">Finansal Rapor</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        const salesData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(satisRaporu));
        
        const ctx = document.getElementById('salesChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: salesData.map(d => new Date(d.Tarih).toLocaleDateString('tr-TR', { day: '2-digit', month: '2-digit' })),
                datasets: [{
                    label: 'Satış (₺)',
                    data: salesData.map(d => d.ToplamSatis),
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.1)',
                    tension: 0.4,
                    fill: true
                }, {
                    label: 'Sipariş Sayısı',
                    data: salesData.map(d => d.SiparisSayisi),
                    borderColor: 'rgb(255, 99, 132)',
                    backgroundColor: 'rgba(255, 99, 132, 0.1)',
                    tension: 0.4,
                    yAxisID: 'y1'
                }]
            },
            options: {
                responsive: true,
                interaction: {
                    mode: 'index',
                    intersect: false,
                },
                scales: {
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        ticks: {
                            callback: function(value) {
                                return '₺' + value.toLocaleString('tr-TR');
                            }
                        }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        grid: {
                            drawOnChartArea: false,
                        },
                    },
                }
            }
        });
    </script>
}
