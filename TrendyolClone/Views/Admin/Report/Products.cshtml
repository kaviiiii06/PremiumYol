@model List<TrendyolClone.Models.DTOs.UrunSatisRaporuDto>
@{
    ViewData["Title"] = "Ürün Satış Raporu";
    var filtre = ViewBag.Filtre as TrendyolClone.Models.DTOs.RaporFiltre;
    var kategoriler = ViewBag.Kategoriler as List<TrendyolClone.Models.Kategori>;
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box"></i> Ürün Satış Raporu</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
    </div>

    <!-- Filtre -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Başlangıç</label>
                    <input type="date" name="baslangic" class="form-control" value="@filtre?.BaslangicTarihi.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Bitiş</label>
                    <input type="date" name="bitis" class="form-control" value="@filtre?.BitisTarihi.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Kategori</label>
                    <select name="kategoriId" class="form-select">
                        <option value="">Tümü</option>
                        @if (kategoriler != null)
                        {
                            @foreach (var kategori in kategoriler)
                            {
                                <option value="@kategori.Id" selected="@(filtre?.KategoriId == kategori.Id)">@kategori.Ad</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Filtrele
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Ürün Listesi -->
    <div class="card">
        <div class="card-header">
            <strong>@Model.Count ürün listelendi</strong>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Ürün</th>
                            <th>Kategori</th>
                            <th>Satış Adedi</th>
                            <th>Toplam Gelir</th>
                            <th>Stok</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var sira = 1; }
                        @foreach (var urun in Model)
                        {
                            <tr>
                                <td>@sira</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(urun.ResimUrl ?? "/images/no-image.jpg")" alt="@urun.UrunAdi" class="rounded" style="width: 40px; height: 40px; object-fit: cover;">
                                        <span class="ms-2">@urun.UrunAdi</span>
                                    </div>
                                </td>
                                <td>@urun.KategoriAdi</td>
                                <td><strong>@urun.SatisSayisi</strong></td>
                                <td><strong>₺@urun.ToplamGelir.ToString("N2")</strong></td>
                                <td>
                                    @if (urun.StokMiktari == 0)
                                    {
                                        <span class="badge bg-danger">Tükendi</span>
                                    }
                                    else if (urun.StokMiktari <= 10)
                                    {
                                        <span class="badge bg-warning">@urun.StokMiktari</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@urun.StokMiktari</span>
                                    }
                                </td>
                            </tr>
                            sira++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
