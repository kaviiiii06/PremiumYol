@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <h1 class="mb-4">Admin Paneli</h1>
    
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-box fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Ürünler</h5>
                    <p class="card-text fs-3 fw-bold">@ViewBag.ProductCount</p>
                    <a asp-controller="Admin" asp-action="Products" class="btn btn-primary btn-sm">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-tags fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Kategoriler</h5>
                    <p class="card-text fs-3 fw-bold">@ViewBag.CategoryCount</p>
                    <a asp-controller="Admin" asp-action="Categories" class="btn btn-success btn-sm">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-shopping-cart fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Siparişler</h5>
                    <p class="card-text fs-3 fw-bold">@ViewBag.OrderCount</p>
                    <a asp-controller="Admin" asp-action="Orders" class="btn btn-warning btn-sm">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Kullanıcılar</h5>
                    <p class="card-text fs-3 fw-bold">@ViewBag.UserCount</p>
                    <a asp-controller="Admin" asp-action="Users" class="btn btn-info btn-sm">Yönet</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-question-circle fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Sorular</h5>
                    <p class="card-text fs-3 fw-bold">@ViewBag.SoruCount</p>
                    <a asp-controller="Admin" asp-action="Questions" class="btn btn-danger btn-sm">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-truck fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title">Tedarikçiler</h5>
                    <p class="card-text fs-3 fw-bold">@ViewBag.SupplierCount</p>
                    <a asp-controller="Admin" asp-action="Suppliers" class="btn btn-secondary btn-sm">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-user-shield fa-3x text-dark mb-3"></i>
                    <h5 class="card-title">Roller</h5>
                    <p class="card-text fs-3 fw-bold">@ViewBag.RolCount</p>
                    <a asp-controller="Admin" asp-action="Roles" class="btn btn-dark btn-sm">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-credit-card fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Ödeme Yöntemleri</h5>
                    <p class="card-text fs-6 text-muted">Online/Offline</p>
                    <a asp-controller="Admin" asp-action="PaymentMethods" class="btn btn-success btn-sm">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-cog fa-3x text-muted mb-3"></i>
                    <h5 class="card-title">Site Ayarları</h5>
                    <p class="card-text fs-6 text-muted">Genel Ayarlar</p>
                    <a asp-controller="Admin" asp-action="SiteSettings" class="btn btn-secondary btn-sm">Yönet</a>
                </div>
            </div>
        </div>
    </div>
</div>