@model IEnumerable<TrendyolClone.Models.DTOs.YorumListeDto>
@{
    ViewData["Title"] = "Yorumlarım";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <h2>Yorumlarım</h2>
            
            @if (Model != null && Model.Any())
            {
                foreach (var yorum in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="d-flex align-items-center mb-2">
                                        <strong>@yorum.UrunAdi</strong>
                                        <span class="ms-3 text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star@(i <= yorum.GenelPuan ? "-fill" : "")"></i>
                                            }
                                        </span>
                                        <small class="ms-3 text-muted">@yorum.OlusturmaTarihi.ToString("dd.MM.yyyy")</small>
                                    </div>
                                    
                                    @if (yorum.OnaylandiMi)
                                    {
                                        <span class="badge bg-success mb-2">Onaylandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning mb-2">Onay Bekliyor</span>
                                    }
                                    
                                    <p class="mb-2">@yorum.Yorum</p>
                                    
                                    @if (yorum.Resimler != null && yorum.Resimler.Any())
                                    {
                                        <div class="mb-2">
                                            @foreach (var resim in yorum.Resimler)
                                            {
                                                <img src="@resim" alt="Yorum resmi" class="img-thumbnail me-2" style="width: 80px; height: 80px; object-fit: cover;">
                                            }
                                        </div>
                                    }
                                    
                                    <div class="mt-2">
                                        <small class="text-muted">
                                            <i class="bi bi-hand-thumbs-up"></i> @yorum.FaydaliSayisi faydalı
                                            <span class="ms-2"><i class="bi bi-hand-thumbs-down"></i> @yorum.FaydasizSayisi faydasız</span>
                                        </small>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(yorum.SaticiYaniti))
                                    {
                                        <div class="mt-3 p-3 bg-light rounded">
                                            <strong>Satıcı Yanıtı:</strong>
                                            <p class="mb-0 mt-2">@yorum.SaticiYaniti</p>
                                            <small class="text-muted">@yorum.SaticiYanitTarihi?.ToString("dd.MM.yyyy")</small>
                                        </div>
                                    }
                                </div>
                                
                                <div class="col-md-3 text-end">
                                    <a href="@Url.Action("Details", "Product", new { id = yorum.UrunId })" class="btn btn-sm btn-outline-primary mb-2">
                                        <i class="bi bi-box"></i> Ürüne Git
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger" onclick="yorumSil(@yorum.Id)">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
                <!-- Sayfalama -->
                <nav>
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(ViewBag.Sayfa <= 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("MyReviews", new { sayfa = ViewBag.Sayfa - 1 })">Önceki</a>
                        </li>
                        <li class="page-item active">
                            <span class="page-link">@ViewBag.Sayfa</span>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("MyReviews", new { sayfa = ViewBag.Sayfa + 1 })">Sonraki</a>
                        </li>
                    </ul>
                </nav>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Henüz yorum yapmadınız.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
<script>
    function yorumSil(yorumId) {
        if (!confirm('Bu yorumu silmek istediğinizden emin misiniz?')) {
            return;
        }
        
        fetch('@Url.Action("Delete")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ yorumId: yorumId })
        })
        .then(response => response.json())
        .then(data => {
            alert(data.message);
            if (data.success) {
                location.reload();
            }
        });
    }
</script>
}
