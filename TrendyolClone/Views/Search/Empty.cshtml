@{
    ViewData["Title"] = "Arama";
}

<div class="container mt-5">
    <div class="text-center py-5">
        <i class="fas fa-search fa-4x text-muted mb-4"></i>
        <h2>Ne aramak istersiniz?</h2>
        <p class="text-muted mb-4">Arama yapmak için yukarıdaki arama kutusunu kullanın</p>
        
        <div id="popularSearches" class="mt-4">
            <h5 class="mb-3">Popüler Aramalar</h5>
            <div id="popularTags" class="d-flex flex-wrap justify-content-center gap-2">
                <!-- Dinamik olarak yüklenecek -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Popüler aramaları yükle
            $.get('@Url.Action("Popular", "Search")', function(data) {
                var tagsHtml = '';
                data.forEach(function(term) {
                    tagsHtml += '<a href="@Url.Action("Index", "Search")?q=' + encodeURIComponent(term) + '" class="badge bg-primary text-decoration-none fs-6 px-3 py-2">' + term + '</a>';
                });
                $('#popularTags').html(tagsHtml);
            });
        });
    </script>
}
